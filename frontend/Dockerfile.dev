FROM node:18-alpine

WORKDIR /app

# package.json과 package-lock.json 복사
COPY frontend/package*.json ./

# 의존성 설치
RUN npm install

# 소스 코드 복사
COPY frontend/ .

# 환경 변수 설정
ENV NODE_ENV=development
ENV REACT_APP_API_URL=http://localhost:8000
ENV CHOKIDAR_USEPOLLING=true
ENV WATCHPACK_POLLING=true

# 포트 노출
EXPOSE 3000

# 개발 서버 실행
CMD ["npm", "start"]
